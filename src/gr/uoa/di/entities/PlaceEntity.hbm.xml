<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="gr.uoa.di.entities.PlaceEntity" table="place" schema="ompampassas">
        <id name="id">
            <column name="Id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="Name" sql-type="varchar(64)" length="64"/>
        </property>
        <property name="address">
            <column name="Address" sql-type="varchar(64)" length="64"/>
        </property>
        <property name="openingTime">
            <column name="OpeningTime" sql-type="time"/>
        </property>
        <property name="closingTime">
            <column name="ClosingTime" sql-type="time"/>
        </property>
        <property name="owner">
            <column name="Owner" sql-type="varchar(64)" length="64"/>
        </property>
    </class>
</hibernate-mapping>