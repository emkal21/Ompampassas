<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="gr.uoa.di.entities.TicketEntity" table="ticket" schema="ompampassas">
        <composite-id mapped="true" class="gr.uoa.di.entities.TicketEntityPK">
            <key-property name="parentUsername">
                <column name="parent_Username" sql-type="varchar(64)" length="64"/>
            </key-property>
            <key-property name="eventsId">
                <column name="events_Id" sql-type="int(11)"/>
            </key-property>
            <key-property name="eventsPlaceId">
                <column name="events_PlaceId" sql-type="int(11)"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>